func extern putchar(c: char): int;

func print_int(value: int): int {
    var v: int = value;

    if (v == 0) {
        putchar('0');
        return 0;
    }

    if (v < 0) {
        putchar('-');
        v = -v;
    }

    if (v / 10 != 0) {
        print_int(v / 10);
    }

    var rem: int = v % 10;
    var digit: char = rem + '0';
    putchar(digit);
}