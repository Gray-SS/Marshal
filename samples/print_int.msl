func extern putchar(c: char): int;

func print_int(value: int): int {
    if (value == 0) {
        putchar('0');
        return 0;
    }

    if (value < 0) {
        putchar('-');
        value = -value;
    }

    if (value / 10 != 0) {
        print_int(value / 10);
    }

    var digit: char = value % 10 + '0';
    putchar(digit);
}