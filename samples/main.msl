func extern putchar(c: char): int;

func print_int(value: int): int {
    if (value == 0) {
        putchar('0');
        return 0;
    }

    if (value < 0) {
        putchar('-');
        value = -value;
    }

    if (value / 10 != 0) {
        print_int(value / 10);
    }

    var digit: char = value % 10 + '0';
    putchar(digit);
}

func main(): int {
    var x: int[] = new int[5];
    x[2] = 30;

    var ptr: int* = &x[2];
    print_int(*ptr);

    return 0;
}