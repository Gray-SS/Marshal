func extern putchar(c: char): int;

proc print_int(value: int) {
    if (value == 0) {
        putchar('0');
    }

    if (value < 0) {
        putchar('-');
        value = -value;
    }

    if (value / 10 != 0) {
        print_int(value / 10);
    }

    var digit: char = value % 10 + '0';
    putchar(digit);
}

func main(): int {
    var a: int[] = new int[3];
    a[0] = 5;
    a[1] = 10;
    a[2] = 15;

    var p: int* = &a[1];
    print_int(*((p - 1) + 2));
    
    return 0;
}