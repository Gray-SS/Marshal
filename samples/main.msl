func extern putchar(c: char): int;

proc print_int(value: int) {
    if (value == 0) {
        putchar('0');
    }

    if (value < 0) {
        putchar('-');
        value = -value;
    }

    if (value / 10 != 0) {
        print_int(value / 10);
    }

    var digit: char = value % 10 + '0';
    putchar(digit);
}

func main(): int {
    var str: string = "Hello World !";
    var p: char* = &str[2];

    putchar(*p);

    return 0;
}